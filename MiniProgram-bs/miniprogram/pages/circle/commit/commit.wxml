<view wx:if="{{!donelogin}}">
	<view bindtap="tologin">请先登录</view>
</view>

<view  wx:else>

<view class='bottomrow'>
	<view class='bottomtab' bindtap="first_select">
		<text class='bottomtabText' style='color:{{firco}};border-bottom:4rpx solid' wx:if="{{temp}}">寻书发布</text>
		<text class='bottomtabText' style='color:{{firco}}' wx:if="{{!temp}}">寻书发布</text>
	</view>
	<view class='bottomtab' bindtap="second_select">
		<text class='bottomtabText' style='color:{{secco}};border-bottom:4rpx solid' wx:if="{{!temp}}">出书发布</text>
		<text class='bottomtabText' style='color:{{secco}}' wx:if="{{temp}}">出书发布</text>
	</view>
</view>

<view wx:if="{{temp}}" class='textarea'>
	<textarea placeholder="输入书名" placeholder-style="color:#888888; font-size:38rpx;" class='bookname' maxlength='-1' bindinput="bindBookname"></textarea>
	<textarea placeholder="其它补充" placeholder-style="color:#888888; font-size:38rpx;" class='textinput' maxlength='-1' bindinput="bindContent"></textarea>
	<view class="addphoto">
		<image  class='photo' src='{{addphotoPath}}' bindtap='addphoto'></image>
		<image wx:if="{{delete}}"  class="deletephoto" src="/images/icon/deletephoto.png" bindtap="deletephoto"></image>
	</view>
</view>
<view wx:else class='textarea'>
	<textarea placeholder="输入书名" placeholder-style="color:#888888; font-size:38rpx;" class='bookname' maxlength='-1' bindinput="bindBookname"></textarea>
	<textarea placeholder="其它补充" placeholder-style="color:#888888; font-size:38rpx;" class='textinput' maxlength='-1' bindinput="bindContent"></textarea>
	<view class="addphoto">
		<image  class='photo' src='{{addphotoPath}}' bindtap='addphoto'></image>
		<image wx:if="{{delete}}"  class="deletephoto" src="/images/icon/deletephoto.png" bindtap="deletephoto"></image>
	</view>
	<view class="section">
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      书籍分类：{{array[index]}}
    </view>
  </picker>
</view>
	<view class="page">
		<view class="page__bd">
			<view class="section section_gap">
				<radio-group class="radio-group" bindchange="typeChange">
					<radio class="radio" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
						<text>{{item.value}}</text>
					</radio>
				</radio-group>
			</view>
		</view>
	</view>
	<view class="page__bd">
		<view class="section section_gap">
			<view class="section__title">存入个人书籍</view>
			<view class="body-view">
				<switch checked="{{addbook}}" bindchange="switchChange" />
			</view>
		</view>
	</view>
</view>
<view id='btn' class='click' bindtap='send'>发布</view>

</view>