/* pages/circle/index/index.wxss */


page {
  background-color: #EFEFEF;
}


.scbg {
  top: 11%;
  position: absolute;
  background-color: #EFEFEF;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.box {
  border-radius: 12px;
  width: 45.5%;
  background-color: white;
  padding-top: 25rpx;
  border-bottom: 15px solid #EFEFEF;
  margin-left: 3%;
}

.firstblock {
  height: 150rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang {
  width: 130rpx;
  height: 130rpx;
}

.person {
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}



.showname {
  font-size: 32rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
}

.showtime {
  padding-top: 55rpx;
  padding-left: 200rpx;
  font-size: 20rpx;
  color: gray;
  font-family: PingFangSC-regular;
}

.secondblock {
  display: flex;
  flex-flow: column;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
}

.book-box {
  display: flex;
  flex-flow: column;
}

.bookname {
  font-size: 32rpx;
  color: #F57123;
  font-family: PingFangSC-regular;
  word-break: break-all;
}

.content {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: black;
  font-family: PingFangSC-regular;
  word-break: break-all;
  padding-top: 5rpx;
  padding-left: 5rpx;
}

.thirdblock {
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}

.bottomrow {
  background-color: white;
  width: 100%;
  height: 9%;
  top: 0rpx;
  display: flex;
  position: fixed;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottomtab {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottomtabText {
  font-size: 35rpx;
  color: #979797;
}

.touxiang {
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
}

.photo {
  width: 220rpx;
  height: 200rpx;
}