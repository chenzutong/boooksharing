/* pages/circle/index/index.wxss */


page {
  background-color: #EFEFEF;
}

.scbg {
  background-color: #EFEFEF;
  width: 94%;
  height: 91%;
  left: 3%;
  top: 10%;
  position: absolute;
}

.box {
  width: 100%;
  background-color: white;
  padding-top: 25rpx;
  border-bottom: 15rpx solid #EFEFEF;
}

.firstblock {
  height: 150rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang {
  width: 130rpx;
  height: 130rpx;
}

.person {
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}


.tel {
  display: flex;
  justify-content: flex-start;
  margin-top: 45rpx;
  margin-left: 350rpx;
  flex-direction: row;
}

.showname {
  font-size: 34rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime {
  font-size: 20rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}

.secondblock {
  display: flex;
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid #CFCFCF;
}

.book-box {
  display: flex;
  flex-flow: column;
}

.bookname {
  font-size: 32rpx;
  color: #F57123;
  font-family: PingFangSC-regular;
  word-break: break-all;
}

.content {
  font-size: 28rpx;
  color: black;
  font-family: PingFangSC-regular;
  word-break: break-all;
  padding-top: 5rpx;
  padding-left: 5rpx;
}

.thirdblock {
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}

.bottomrow {
  background-color: white;
  width: 100%;
  height: 9%;
  top: 0rpx;
  display: flex;
  position: fixed;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottomtab {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottomtabText {
  font-size: 35rpx;
  color: #979797;
}

.touxiang {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 60rpx;
  height: 60rpx;
}

.photo {
  width: 150rpx;
  height: 150rpx;
}