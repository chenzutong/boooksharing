<!--pages/enroll/enroll.wxml-->
<view class='background'>
<view class='first'>
  <input id='username' placeholder='用户名' placeholder-class='plass' class='inputs' type='text' bindinput='usernameInput'> </input>
</view>
<view class='second'>
  <input id='phone' placeholder='手机号' placeholder-class='plass' class='inputs' type='number' bindinput='phoneInput'> </input>
</view>
<view class='second'>
  <input id='wechatID' placeholder='微信号' placeholder-class='plass' class='inputs' type='text' bindinput='wechatIDInput'> </input>
</view>
<view class='second'>
  <input id='classroom' placeholder='年纪专业' placeholder-class='plass' class='inputs' type='text' bindinput='classroomInput'> </input>
</view>
<view class='second'>
  <input id='password' placeholder='登录密码' placeholder-class='plass' class='inputs' type='password' bindinput='passwordInput'> </input>
</view>
<view class='second'>
  <input id='passworddack' placeholder='确认密码' placeholder-class='plass' class='inputs' type='password' bindinput='passwordInpuAckt'> </input>
</view>

<view class='click' bindtap='regist'>注册</view>
<view bindtap='signin'>
  <text class='no'>已有账号，点我登录</text>
</view>
</view>
