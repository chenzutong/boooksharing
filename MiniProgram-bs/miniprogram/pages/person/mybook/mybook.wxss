/* pages/circle/index/index.wxss */


page {
  background-color: #EFEFEF;
}


.scbg {
  top: 3%;
  position: absolute;
  background-color: #EFEFEF;
  width: 98%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.box{
  border-radius: 12px;
  width: 45.5%;
  background-color: white;
  margin-bottom: 10px;
  margin-left: 3%;
}

.addbox{
  height: 450rpx;
  border-radius: 12px;
  width: 45.5%;
  background-color: white;
  margin-bottom: 10px;
  margin-left: 3%;
}

.touxiang {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10px;
  margin-bottom: 5rpx;
}

.person {
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.showname {
  font-size: 32rpx;
  color:#3F51B5;
  font-family: PingFangSC-regular;
  margin-top: 6rpx;
  margin-left: 2rpx;
}

.showtime {
  padding-top: 55rpx;
  padding-left: 200rpx;
  font-size: 20rpx;
  color: gray;
  font-family: PingFangSC-regular;
}

.secondblock {
  display: flex;
  flex-flow: column;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 15rpx;
  border-radius: 12px;
  margin-top: 0;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  margin-left: 0%;
  margin-right: 6%;
  font-size: 40rpx;
  flex-direction: row;
  border-bottom: 1rpx solid #CFCFCF;
}

.book-box {
  display: flex;
  flex-flow: column;
  margin-top: 20rpx;
}

.bookname {
  font-size: 32rpx;
  color: #F57123;
  font-family: PingFangSC-regular;
  word-break: break-all;
}

.content {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: black;
  font-family: PingFangSC-regular;
  word-break: break-all;
  padding-top: 5rpx;
  padding-left: 14rpx;
}

.like {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}

.bottomrow {
  background-color: white;
  width: 100%;
  height: 9%;
  display: flex;
  position: fixed;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottomtab {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottomtabText {
  font-size: 35rpx;
  color: #979797;
}

.addbook {
  top: 15rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
}

.photo {
  width: 220rpx;
  height: 200rpx;
  border-radius: 1px;
}


.tab{
  display: flex;
  flex-direction: column;
 }
 .tab-nav{
  width: 88%;
  height: 80rpx;
  background: #fff;
  border-bottom: 0.5rpx dotted #ddd;
  display: flex;
  line-height: 79rpx;
  position: relative;
 }
   
 .tab-line{
  position: absolute;
  left: 0;
  bottom: -1rpx;
  height: 4rpx;
  background: #f7982a;
  transition: all 0.3s;
 }
 .tab-content{
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
 }


 .addmybook{
  margin-top: 30%;
  margin-left: 20%;
  height: 200rpx;
  width: 200rpx;
 }

 .addtxt{
   font-weight: big;
   color: #515151;
   margin-left: 30%;
 }